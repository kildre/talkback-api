{
  "editor.formatOnSave": true,
  "python.defaultInterpreterPath": "./venv/bin/python",
  "python.linting.enabled": true,
  "python.linting.ruffEnabled": true,
  "python.linting.lintOnSave": true,
  "ruff.enable": true,
  "ruff.organizeImports": true,
  "ruff.fixAll": true,
  "[python]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.ruff": "explicit",
      "source.organizeImports.ruff": "explicit"
    },
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  "python.testing.pytestArgs": ["tests"],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#ff76ff",
    "activityBar.background": "#ff76ff",
    "activityBar.foreground": "#15202b",
    "activityBar.inactiveForeground": "#15202b99",
    "activityBarBadge.background": "#ffff00",
    "activityBarBadge.foreground": "#15202b",
    "commandCenter.border": "#15202b99",
    "sash.hoverBorder": "#ff76ff",
    "statusBarItem.hoverBackground": "#ff10ff",
    "statusBarItem.remoteBackground": "#ff43ff",
    "statusBarItem.remoteForeground": "#15202b",
    "titleBar.activeBackground": "#ff43ff",
    "titleBar.activeForeground": "#15202b",
    "titleBar.inactiveBackground": "#ff43ff99",
    "titleBar.inactiveForeground": "#15202b99"
  },
  "peacock.color": "#ff43ff"
}
