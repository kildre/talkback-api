{
  "editor.formatOnSave": true,
  "python.defaultInterpreterPath": "./venv/bin/python",
  "python.linting.enabled": true,
  "python.linting.ruffEnabled": true,
  "python.linting.lintOnSave": true,
  "ruff.enable": true,
  "ruff.organizeImports": true,
  "ruff.fixAll": true,
  "[python]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.ruff": "explicit",
      "source.organizeImports.ruff": "explicit"
    },
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  "python.testing.pytestArgs": ["tests"],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#a9129e",
    "activityBar.background": "#a9129e",
    "activityBar.foreground": "#e7e7e7",
    "activityBar.inactiveForeground": "#e7e7e799",
    "activityBarBadge.background": "#a2ad12",
    "activityBarBadge.foreground": "#15202b",
    "commandCenter.border": "#e7e7e799",
    "sash.hoverBorder": "#a9129e",
    "statusBarItem.hoverBackground": "#a9129e",
    "statusBarItem.remoteBackground": "#7b0d73",
    "statusBarItem.remoteForeground": "#e7e7e7",
    "titleBar.activeBackground": "#7b0d73",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveBackground": "#7b0d7399",
    "titleBar.inactiveForeground": "#e7e7e799",
    "statusBar.background": "#7b0d73",
    "statusBar.foreground": "#e7e7e7"
  },
  "peacock.color": "#7b0d73"
}
